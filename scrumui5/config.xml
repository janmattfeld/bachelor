<?xml version='1.0' encoding='utf-8'?>

<widget
	id="de.abat.scrumui5"
	version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0">

	<name>abat ScrumUI5</name>

	<description>
		Scrum Board using SAP SAPUI5 and Mobile Platform Services.
	</description>

	<author
		email="SAP.Mobile@abat.de"
		href="http://www.abat.de">
		abat AG
	</author>

	<content src="localindex.html" />

	<!-- TODO: Different Icon and Splashscreen sizes -->
	<icon src="www/img/114_iPhone-Retina_Web_Clip.png" />

	<preference
		name="SplashScreen"
		value="screen" />
	<preference
		name="SplashScreenDelay"
		value="10000" />

	<!-- Change iOS Status Bar Color to "SAPUI5 Blue" -->
	<preference
		name="StatusBarOverlaysWebView"
		value="false" />
	<preference
		name="StatusBarBackgroundColor"
		value="#009DE0" />
	<preference
		name="StatusBarStyle"
		value="lightcontent" />

	<feature name="StatusBar">
		<param
			name="ios-package"
			value="CDVStatusBar"
			onload="true" />
	</feature>

	<!-- TODO: Whitelist HCP -->
	<access origin="*" />

</widget>