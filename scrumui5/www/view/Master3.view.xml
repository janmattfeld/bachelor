<mvc:View
	controllerName="de.abat.scrumui5.view.Master3"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="master3Page"
		title="{Bezei}"
		showNavButton="true"
		navButtonText="{i18n>master3NavButtonText}"
		navButtonPress="onNavBack">
		<subHeader>
			<Bar id="master3SearchBar">
				<contentMiddle>
					<SearchField
						id="master3SearchField"
						showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>master3SearchPlaceholder}"
						search="onSearch"
						tooltip="{i18n>master3SearchTooltip}"
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<!-- Context of Element Binding: NO / before item path -->
			<PullToRefresh
				id="master3PullToRefresh"
				visible="{device>/isTouch}"
				refresh="onRefresh" />
			<List
				id="master3List"
				items="{Sprints}"
				mode="{device>/listMode}"
				noDataText="{i18n>master3ListNoDataText}"
				select="onSelect"
				growing="true"
				growingScrollToLoad="true">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						press="onSelect"
						title="{Sprint}">
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>