<mvc:View
	controllerName="de.abat.scrumui5.view.Master2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="master2Page"
		title="{Bezei}"
		showNavButton="true"
		navButtonText="{i18n>master2NavButtonText}"
		navButtonPress="onNavBack">
		<subHeader>
			<Bar id="master2SearchBar">
				<contentMiddle>
					<SearchField
						id="master2SearchField"
						showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>master2SearchPlaceholder}"
						search="onSearch"
						tooltip="{i18n>master2SearchTooltip}"
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<!-- Context of Element Binding: NO / before item path -->
			<PullToRefresh
				id="master2PullToRefresh"
				visible="{device>/isTouch}"
				refresh="onRefresh" />
			<List
				id="master2List"
				items="{Projekte}"
				mode="{device>/listMode}"
				noDataText="{i18n>master2ListNoDataText}"
				select="onSelect"
				growing="true"
				growingScrollToLoad="true">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						press="onSelect"
						title="{Bezei}">
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>