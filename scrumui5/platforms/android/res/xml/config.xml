<?xml version='1.0' encoding='utf-8'?>
<widget id="de.abat.scrumui5" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <name>ScrumUI5</name>
    <description>
        Scrum Board using SAP SAPUI5 and Mobile Platform Services.
    </description>
    <author email="jam@abat.de" href="http://abat.de">
        abat AG
    </author>
    <content src="index.html" />
    <access origin="*" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="AuthProxy">
        <param name="android-package" value="com.sap.mp.cordova.plugins.authProxy.AuthProxy" />
        <param name="onload" value="true" />
    </feature>
    <preference name="SAPKapselHandleHttpRequests" value="false" />
    <feature name="MAFLogonCoreCDVPluginJS" required="true">
        <param name="android-package" value="com.sap.maf.html5.android.MAFLogonCoreCDVPlugin" />
    </feature>
    <feature name="OData">
        <param name="android-package" value="com.sap.mp.cordova.plugins.odata.OData" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
</widget>
